<!--pages/my/editAddress/editAddress.wxml-->
<view class="page">
  <view class="form">
    <view class="item">
      <view class="head">收货人</view>
      <view class="ctn"><input value="{{addr.name}}"></input></view>
    </view>
    <view class="item">
      <view class="head">手机号</view>
      <view class="ctn"><input value="{{addr.phone}}"></input></view>
    </view>
    <view class="item">
      <view class="head">门店选择</view>
      <view class="ctn"><input value="{{addr.shop}}"></input></view>
    </view>
    <view class="item">
      <view class="head">详细地址</view>
      <view class="ctn"><input value="{{addr.address}}"></input></view>
    </view>
    <view class="item">
      <view class="head">楼牌门号</view>
      <view class="ctn"><input value="{{addr.buildingNo}}"></input></view>
    </view>
    <view class="item">
      <view class="head">标签</view>
      <view class="ctn"><input value="{{addr.tag}}"></input></view>
    </view>
  </view>
  <view class="btm">
    <view class="btn">保存收货地址</view>
  </view>
</view>
