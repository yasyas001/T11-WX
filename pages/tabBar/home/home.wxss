.head_nav {
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store_addr {
  display: flex;
  align-items: center;
}

.store_addr image {
  width: 35rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.store_info {
  display: flex;
  flex-direction: column;
  color: #666;
}

.store_info .store_name {
  font-size: 30rpx;
}

.store_info .store_range {
  font-size: 24rpx;
}

.qr_code {
  width: 50rpx;
  height: 50rpx;
}

.pay_code {
  background: #f2f2f2;
  overflow: hidden;
  padding: 20rpx 0;
}

.pay_code .content {
  width: 600rpx;
  margin: 0 auto;
}

.pay_code_txt {
  font-size: 24rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}

.refresh_code {
  display: flex;
}

.refreshBtn {
  margin-right: 20rpx;
}

.pay_code_image {
  width: 100%;
  height: 200rpx;
  background: #666;
  margin-top: 10rpx;
  text-align: center;
  line-height: 200rpx;
}

.pay_code_image text {
  font-size: 30rpx;
  color: #fff;
}

.pay_code .tips {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}

#shop {
  padding: 20rpx 25rpx;
  overflow: hidden;
}

.hotActivity {
  margin-top: 20rpx;
  overflow: hidden;
}

.hotActivity scroll-view {
  white-space: nowrap;
}

.hotActivity .active {
  width: 300rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  border-radius: 20rpx;
  background: #f2f2f2;
  display: inline-block;
  margin-right: 20rpx;
}

.hotActivity .title {
  font-size: 30rpx;
}

.hotActivity scroll-view {
  margin-top: 20rpx;
}

.search_shop input {
  height: 50rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid #666;
  border-radius: 10rpx;
}

.shop_type {
  white-space: nowrap;
  overflow: hidden;
  margin-top: 50rpx;
}

.type {
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.type:nth-last-child(1) {
  margin-right: 0;
}

.type_img {
  width: 100%;
  height: 150rpx;
  background: #f2f2f2;
}

.type_name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 10rpx;
}

.banner {
  overflow: hidden;
}

.bannerList {
  overflow: hidden;
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
}

.bannerList swiper-item {
  overflow: hidden;
}

.item_banner {
  display: inline-block;
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background: #666;
  border-radius: 10rpx;
  color: #fff;
}

.category > view {
  margin-top: 30rpx;
}

.category .title {
  font-size: 30rpx;
}

.category .column_list {
  margin-top: 10rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.category .column {
  width: 250rpx;
  height: 150rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 20rpx;
}

.category .column image {
  width: 100%;
  height: 100%;
}

.category .column:nth-last-child(1) {
  margin-right: 0;
}

.riderRange {
  position: fixed;
  right: 0;
  bottom: 200rpx;
  font-size: 30rpx;
  width: 230rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  background: #666;
  border-radius: 40rpx 0 0 40rpx;
  color: #fff;
}
