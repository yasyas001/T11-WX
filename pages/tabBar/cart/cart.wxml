<!--pages/cart/cart.wxml-->
<!-- 内容 -->
<view class="content">
  <!-- 购物车商品列表 -->
  <checkbox-group class="cart-list" bindchange="checkedGoods">
    <view class="activity">
      <view class="tag">换购</view>
      <view class="info">购满100.00元,可换购超值商品，还差20.00元</view>
      <navigator class="checkout">查看活动</navigator>
    </view>
    <view wx:for="{{goods}}" wx:key="{{index}}" class="goods-item">
      <view class="box" animation="{{animations[index]}}" data-index="{{index}}" bind:touchstart="logTouchDirection" bind:touchend="canShowDelete">
        <label class="checkbox"><checkbox value="{{item.id}}" checked="{{checked[index]}}"></checkbox></label>
        <navigator class="image" url="../home/home"><image src="{{item.imageUrl}}" mode="widthFix"></image></navigator>
        <navigator class="info" url="../home/home">
          <text class="title">{{item.title}}</text>
          <view class="attrs">
            <text>{{item.spec}}</text>
          </view>
          <text class="price">￥{{item.price}}</text>
        </navigator>
        <counter class="counter" value="{{num[item.id]}}" min="1" max="11"></counter>
        <view class="delete"><text>删除</text></view>
      </view>
    </view>
  </checkbox-group>
  <!-- 推荐商品 -->
  <view class="recommend">
    <text class="title">为您推荐</text>
    <view class="list">
      <view wx:for="{{recommend}}" class="recommend-item">
        <navigator class="goods" url=""><image src="{{item.imageUrl}}" mode="widthFix"></image></navigator>
      </view>
    </view>
  </view>
</view>
<!-- 结算 -->
<view class="total">
  <label class="checkbox"><checkbox bindtap="chooseAll" checked="{{checkedAll}}"></checkbox>全选</label>
  <text>合计：￥{{totalPrice}}</text>
  <view class="btn-settle">结算</view>
</view>
