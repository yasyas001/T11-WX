.container {
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 20rpx;
  top: 20rpx;
  right: 20rpx;
  bottom: 0;
}

.shopType {
  width: 200rpx;
  height: 100%;
  overflow: hidden;
}

.shopType .column {
  width: 100%;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  background: #f2f2f2;
  margin-bottom: 20rpx;
}

.shopType .active {
  background: #666;
  color: #fff;
}

.typeDetail {
  width: 480rpx;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.typeDetail .banner {
  height: 150rpx;
  width: 100%;
  overflow: hidden;
}

.typeDetail .banner swiper-item {
  width: 100%;
}

.typeDetail .banner swiper-item view {
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  background: #f2f2f2;
}

.categoryTags {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.categoryTags .tag {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  background: #666;
  color: #fff;
  margin-right: 20rpx;
}

.categoryTags .tag:nth-last-child(1) {
  margin-right: 0;
}

.shopList {
  position: absolute;
  top: 275rpx;
  left: 0;
  bottom: 50rpx;
  right: 0;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.shopInfo {
  margin-top: 20rpx;
  display: flex;
}

.shopImg {
  margin-right: 20rpx;
  position: relative;
}

.shopImg image {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.shopImg view {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #666;
  color: #fff;
}

.shopInfo .info {
  flex: 1;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shopInfo .info view {
  font-size: 24rpx;
  margin-bottom: 15rpx;
}

.shopInfo .info view:nth-last-child(1) {
  margin-bottom: 0;
}

.shopNum {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shopNum .addNum {
  width: 30rpx;
  height: 30rpx;
}

.searchShop {
  font-size: 30rpx;
  margin-top: 25rpx;
}

.searchShop input {
  height: 50rpx;
  padding-left: 20rpx;
  border: 2rpx solid #666;
}
