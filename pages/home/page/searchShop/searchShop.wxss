.container {
  width: 700rpx;
  margin: 0 auto;
}

.searchShop {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.searchShop input {
  width: 550rpx;
  height: 50rpx;
  font-size: 24rpx;
  padding-left: 50rpx;
  overflow: hidden;
  background: #f2f2f2;
  border-radius: 25rpx;
}

.cancel_search {
  font-size: 24rpx;
  color: #666;
}

.search .title {
  font-size: 24rpx;
  color: #666;
}

.search .result_list {
  margin-top: 20rpx;
  display: flex;
}

.search .result_list view {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 25rpx;
  background: #666;
  color: #fff;
  margin-right: 20rpx;  
}

.history_search {
  margin-top: 30rpx;
}